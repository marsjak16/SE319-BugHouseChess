{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true
  },
  "files": ["main.ts"],
  "include": [
    "./**/*.ts",
    "../Public/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}